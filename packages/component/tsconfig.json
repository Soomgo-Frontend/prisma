{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "./dist",
		"declarationDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["**/*.ts","**/*.tsx", "src/index.ts"],
  "exclude": ["node_modules", "dist"],
}